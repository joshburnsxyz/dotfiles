#!/usr/bin/env python3

import os

# Specify directory where all git repos
# live on my system.
rootdir = "~/code"

###########
# Helpers #
###########

# Initiate an empty array, this will hold a list of
# all repos in rootdir.
repoList = []

# iterate through rootdir and generate repoList.
def list_sub_dirs():
  for file in os.listdir(rootdir):
    d = os.path.join(rootdir, file)
    if os.path.isdir(d):
      print(d)
      repoList.append(d)

# cd into dir and perform a git pull then a git push
def pull_and_push_repo(dir):
  retval = os.getcwd()
  os.chdir(dir)
  os.system("git pull")
  os.system("git push")
  os.chdir(retval)

###############
# End Helpers #
###############

list_sub_dirs()
for x in repoList:
  pull_and_push_repo(x)
