#!/bin/sh

ffmpeg \
    -draw_mouse 1 \
    -f x11grab -thread_queue_size 64 -s 1920x1080 -framerate 24 -i :0 \
    -f v4l2 -thread_queue_size 64 -video_size 640x480 -framerate 30 -i /dev/video0 \
    -filter_complex 'overlay=main_w-overlay_w:main_h-overlay_h:format=yuv444' \
    -f pulse -ac 2 -i default \
    -vcodec libx264 -pix_fmt yuv444p \
    output.mp4
